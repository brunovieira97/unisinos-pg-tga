{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar com G++",
            "command": "g++",
            "type": "shell",
            "args": [
                "-Wall",
                "*.cpp",
                "-I.",
                "-g",
                "-lglew32",
                "-lglfw3",
                "-lopengl32",
                "-lglu32",
                "-lgdi32"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}